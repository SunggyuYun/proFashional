<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.example.yungura.profashional.Hompage">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="495dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/hompagebackground"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="141dp"
            android:text="proFashional"
            android:textColor="#FF3396"
            android:textSize="60sp" />

        <Button
            android:id="@+id/bUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/bStylist"
            android:layout_alignLeft="@+id/bStylist"
            android:layout_alignRight="@+id/bStylist"
            android:layout_alignStart="@+id/bStylist"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="88dp"
            android:onClick="onUserClick"
            android:text="Sign in as USER" />

        <Button
            android:id="@+id/bStylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:onClick="onStylistClick"
            android:text="Sign in as STYLIST" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
