<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvUserSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="Sign Up"
            android:textColor="#25B5B3"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TFname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/TFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TFemail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Email Address"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/TFemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TFuname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Username"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/TFuname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TFpass1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Password"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/TFpass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TFpass2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Confirm Password"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/TFpass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Bssignupbutton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/Bssignupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
            android:onClick="onSignUpClick"
            android:text="Sign Up" />
    </RelativeLayout>

</LinearLayout>
